<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_auto_get_information" model="ir.cron">
        <field name="name">MT5: Daily Get information</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_meta_trader_account"/>
        <field name="code">model.cron_get_information()</field>
        <field name="state">code</field>
    </record>

    <record id="ir_cron_auto_get_history_deals" model="ir.cron">
        <field name="name">MT5: Hourly Get History Deals</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_meta_trader_history"/>
        <field name="code">model.cron_get_history_deals()</field>
        <field name="state">code</field>
    </record>

</odoo>
