<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="meta_trader_account_view_tree" model="ir.ui.view">
        <field name="name">meta.trader.account.view.tree</field>
        <field name="model">meta.trader.account</field>
        <field name="arch" type="xml">
            <tree string="" editable='top'>
                <field name='login'/>
                <field name='password' password='1'/>
                <field name='server'/>
                <field name='balance'/>
                <field name="equity" />
            </tree>
        </field>
    </record>

    <record id="meta_trader_account_action" model="ir.actions.act_window">
        <field name="name">Metatrader Account</field>
        <field name="res_model">meta.trader.account</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="metatrader_root_menu"
        name="Metatrader"
        sequence="100"/>

    <menuitem
        id="metatrader_account_menu"
        name="MT Account"
        action="meta_trader_account_action"
        parent="metatrader_root_menu"
        sequence="10"/>
</odoo>
