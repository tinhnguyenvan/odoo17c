<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="meta_trader_history_view_tree" model="ir.ui.view">
        <field name="name">meta.trader.history.view.tree</field>
        <field name="model">meta.trader.history</field>
        <field name="arch" type="xml">
            <tree string="" decoration-danger="profit &lt; 0" decoration-success="profit &gt; 0"
                >
                <field name='time' optional="show"/>
                <field name='symbol' optional="show"/>
                <field name='ticket' optional="show"/>
                <field name='deal_type' optional="show"/>
                <field name='volume' optional="show"/>
                <field name='price' optional="show"/>
                <field name='profit' optional="show"/>
                <field name='order' optional="hide"/>
                <field name='time_msc' optional="hide"/>
                <field name='entry' optional="hide"/>
                <field name='magic' optional="hide"/>
                <field name='position_id' optional="hide"/>
                <field name='reason' optional="hide"/>
                <field name='commission' optional="hide"/>
                <field name='swap' optional="hide"/>
                <field name='fee' optional="hide"/>
                <field name='comment' optional="hide"/>
                <field name='external_id' optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="meta_trader_history_action" model="ir.actions.act_window">
        <field name="name">Meta Trader History</field>
        <field name="res_model">meta.trader.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="metatrader_history_menu"
        name="History"
        parent="metatrader.metatrader_root_menu"
        action="meta_trader_history_action"
        sequence="1000"/>

</odoo>
